<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

    <TextView
            android:text="Saída as 08:00, Chegada às 11:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDepartureAndArrival"
            style="@style/ItemTitleText"/>

    <TextView
            android:text="De Segunda a Sexta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewOperatingDays"
            android:layout_below="@id/textViewDepartureAndArrival"
            style="@style/ItemSubTitleText"/>

</RelativeLayout>
